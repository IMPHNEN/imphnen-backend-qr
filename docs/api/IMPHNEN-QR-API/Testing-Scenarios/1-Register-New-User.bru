meta {
  name: 1. Register New User
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/api/v1/auth/register
  body: json
  auth: none
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "name": "Test User Scenario",
    "email": "scenario.user@test.com",
    "password": "TestPassword123!"
  }
}

script:post-response {
  const status = res.getStatus();
  
  if (status === 201) {
    // Fresh registration
    const data = res.getBody();
    if (data.data && data.data.tokens) {
      bru.setEnvVar("accessToken", data.data.tokens.access_token);
      bru.setEnvVar("refreshToken", data.data.tokens.refresh_token);
      bru.setEnvVar("userId", data.data.user.id);
    }
    console.log("✅ Step 1/4: User registered successfully (new user)");
  } else if (status === 409) {
    // User already exists — fallback to login
    console.log("ℹ️  User already exists, logging in instead...");
    const baseUrl = bru.getEnvVar('baseUrl');
    const loginRes = await axios.post(baseUrl + '/api/v1/auth/login', {
      email: 'scenario.user@test.com',
      password: 'TestPassword123!'
    });
    
    if (loginRes && loginRes.data && loginRes.data.data && loginRes.data.data.tokens) {
      bru.setEnvVar("accessToken", loginRes.data.data.tokens.access_token);
      bru.setEnvVar("refreshToken", loginRes.data.data.tokens.refresh_token);
      bru.setEnvVar("userId", loginRes.data.data.user.id);
      console.log("✅ Step 1/4: Logged in as existing user");
    } else {
      console.log("❌ Fallback login failed");
    }
  } else {
    console.log("❌ Step 1/4: Unexpected status " + status);
  }
}

tests {
  test("User registered or already exists", function() {
    const status = res.getStatus();
    expect([201, 409]).to.include(status);
  });
  
  test("Access token is available", function() {
    const token = bru.getEnvVar("accessToken");
    expect(token).to.be.a("string");
    expect(token.length).to.be.greaterThan(0);
  });
}

docs {
  # Scenario Step 1: Register New User
  
  Create a new user account for testing.
  If the user already exists (409), automatically falls back to login.
  
  **Idempotent**: Safe to run multiple times.
  
  **Next Step**: 2. Get New User Profile
}
