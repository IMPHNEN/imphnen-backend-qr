script:pre-request {
  // First login as regular user to get a non-admin token
  console.log("⚠️  This test requires logging in as a regular user first");
  console.log("   Run Login-User with user@imphnen.id / user123 before this test");
}

script:post-response {
  if (res.getStatus() === 403) {
    console.log("✅ Correctly returned 403 for non-admin user");
  }
}

tests {
  test("Returns 403 for non-admin user", function() {
    expect(res.getStatus()).to.equal(403);
  });
  
  test("Response has error structure", function() {
    const body = res.getBody();
    expect(body.success).to.equal(false);
    expect(body).to.have.property("error");
  });
}

