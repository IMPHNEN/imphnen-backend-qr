meta {
  name: Error - Invalid Login
  type: http
  seq: 5
}

post {
  url: {{baseUrl}}/api/v1/auth/login
  body: json
  auth: none
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "email": "nonexistent@test.com",
    "password": "WrongPassword123!"
  }
}

script:post-response {
  if (res.getStatus() === 401) {
    console.log("âœ… Correctly returned 401 for invalid credentials");
  }
}

tests {
  test("Returns 401 for invalid credentials", function() {
    expect(res.getStatus()).to.equal(401);
  });
  
  test("Response has error structure", function() {
    const body = res.getBody();
    expect(body.success).to.equal(false);
    expect(body.message).to.be.a("string");
  });
  
  test("No token returned", function() {
    const body = res.getBody();
    if (body.data) {
      expect(body.data).to.not.have.property("tokens");
    }
  });
}

